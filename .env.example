# Uni Münster Login-Daten
UNI_USERNAME=dein_uni_benutzername
UNI_PASSWORD=dein_passwort

# IMAP Server Einstellungen (Standard: Uni Münster)
IMAP_SERVER=imap.uni-muenster.de
IMAP_PORT=993

# Überwachungseinstellungen
CHECK_INTERVAL=60  # Sekunden zwischen E-Mail-Checks
RETRY_INTERVAL=300  # Sekunden bis zum nächsten Versuch bei Fehler

# Benachrichtigungseinstellungen
SOUND_ENABLED=true
CUSTOM_SOUND_PATH=  # Pfad zu eigener Sound-Datei (optional)
NOTIFICATION_VOLUME=1.0  # 0.0 bis 1.0

# Erweiterte Optionen
SHOW_NOTIFICATION_POPUP=false  # Desktop-Benachrichtigung (benötigt plyer)
SHOW_SUBJECT_PREVIEW=false  # E-Mail-Betreff in Benachrichtigung anzeigen

# Debug
DEBUG=false